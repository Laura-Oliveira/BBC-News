<resources>
    <!-- Estilo para o layout principal -->
    <style name="ArticleLayout">
        <item name="android:background">#0D0D0D</item>
    </style>

    <!-- Estilo para as imagens -->
    <style name="ArticleImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- Estilo para os textos principais -->
    <style name="ArticleTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Estilo para descrições e conteúdo -->
    <style name="ArticleBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10pt</item>
    </style>
</resources>