<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ========================================== APP THEME ==========================================  -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ======================================== BOX HEADLINE =======================================  -->
    <style name="BoxHeadline">
        <!-- Dimens -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Position -->
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>

        <!-- Orientation -->
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- ======================================== TITLE NEWS =======================================  -->
    <style name="TitleNews">
        <!-- Dimens -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Position -->
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>

        <!-- Text -->
        <item name="android:text">@string/title_news</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textColor"> @color/white</item>
    </style>

    <!-- ======================================== RECYCLEVIEW =======================================  -->
    <!-- List Component -->
    <style name="RecycleView" parent="Widget.MaterialComponents.CardView">
        <!-- Dimens -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Position -->
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>

        <!-- Card Corners -->
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">16dp</item>

        <!-- Colors -->
        <item name="android:backgroundTint">@color/card_background_color</item>
    </style>
</resources>