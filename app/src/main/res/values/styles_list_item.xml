<resources>
    <!-- ======================================== BOX LISTITEM =======================================  -->
    <!-- CardView Content -->
    <style name="CardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Image -->
    <style name="NewsImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Title -->
    <style name="NewsTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Description -->
    <style name="NewsDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">9pt</item>
    </style>


    <!-- Divider Container-->
    <style name="DividerContainer" parent="Theme.Material3.Light">
        <!-- Dimens -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Position -->
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:orientation">horizontal</item>

        <!-- Color -->
        <item name="dividerColor">@color/black</item>
    </style>

    <!-- Line Divider (List Items) -->
    <style name="Divider" parent="Theme.Material3.Light">
    <!-- Dimens -->
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">wrap_content</item>

    <!-- Position -->
    <item name="android:layout_marginTop">32dp</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:layout_marginEnd">16dp</item>

        <!-- Color -->
        <item name="dividerColor">@color/black</item>
    </style>
</resources>